{
    "compilerOptions": {
        "module": "esnext",
        "strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true // https://vite.dev/guide/features.html#isolatedmodules
    },
    "exclude": [
        "node_modules"
    ]
}
